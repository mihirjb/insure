<%= form_for @client, :html => { :multipart => true } do |f| -%>
<div class="field">
	<%= f.label :companyorindividual, "Company or Individual" %>
	<%= f.text_field :companyorindividual %>
</div>  

<div class="field">
	<%= f.label :email, "Email Address" %>
	<%= f.text_field :email %>
</div>

<div class="field">
	<%= f.label :address, "Address" %>
	<%= f.text_area :address %>
</div>

<div class="field">
	<%= f.label :city, "City" %>
	<%= f.text_field :city %>
</div>

<div class="field">
	<%= f.label :state, "State" %>
	<%= f.text_field :state %> 
</div>

<div class="field">
	<%= f.label :landlinephone, "Landline Number" %>
	<%= f.text_field :landlinephone %>
</div>

<div class="field">
	<%= f.label :mobilenumber, "Mobile Number" %>
	<%= f.text_field :mobilenumber %>
</div>

<div class="field">
	<%= f.label :contperson, "Contact Person" %>
	<%= f.text_field :contperson %>
</div>

<div class="field">
<%= f.submit "Update", :disable_with => 'Adding...' %>
</div>
<% end -%>